pipeline {
    agent none 
    stages {
        stage('Example Build') {
            agent { kubernetes 'docker.io/library/maven:3-alpine' } 
            steps {
                echo 'Hello, Maven'
                sh 'mvn --version'
            }
        }
        stage('Example Test') {
            agent { kubernetes 'docker.io/library/openjdk:8-jre' } 
            steps {
                echo 'Hello, JDK'
                sh 'java -version'
            }
        }
    }
}
